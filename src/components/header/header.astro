---
import "./header.css";
import SkipLinks from "$src/components/skip-links/skip-links.astro";
---

<header
	class="header with-sidebar align-items-center wrapper-two-col"
	role="banner"
	id="site-header"
>
	<div class="sidebar">
		<SkipLinks />
		<a href="/" class="logo">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="300px"
				height="100px"
				viewBox="0 0 300 100"
				stroke="currentColor"
			>
				<title id="logo">logo- Trapti Rahangdale</title>
				<defs>
					<path
						id="curve-path-1"
						d="M 0 60 C 140 90 190 0 290 50 "
						stroke-width="3"
						stroke="#ffce5c"
						fill="none"></path>
					<path
						id="curve-path-2"
						d="M 0 56 C 140 86 190 0 290 46 "
						stroke-width="3"
						stroke="#ff5e6c"
						fill="none"></path>
				</defs>
				<use href="#curve-path-1" fill="currentColor" stroke="currentColor"
				></use>
				<use href="#curve-path-2" fill="currentColor" stroke="currentColor"
				></use>
				<text font-size="2rem" x="0" y="0" class="name-text">
					<textPath href="#curve-path-1">
						<tspan dx="15">trapti</tspan>
						<tspan dx="15">rahangdale</tspan>
					</textPath>
				</text>
			</svg>
		</a>
	</div>

	<nav class="navigation flex align-items-center justify-content-center">
		<ul class="menu flex no-list-style">
			<li class="menu-item">
				<a class="link" href="/about/">About me</a>
			</li>
			<li class="menu-item">
				<a class="link" href="/blog/">Blogs</a>
			</li>
			<li class="menu-item">
				<a class="link" href="/#hire-me">Hire me</a>
			</li>
			<li class="menu-item">
				<a class="link" href="/#home-work-lab">Work</a>
			</li>
		</ul>
	</nav>
</header>
