---
import talkImgJPG from "$src/images/talk-pic.jpg";
---

<div class="about-page__talk-image">
	<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 780" width="100%">
		<rect width="100%" height="100%" x="0" y="0" fill="#e7e7e8"></rect>
		<circle
			class="basic-shape hoop"
			fill="none"
			stroke="#ffe430"
			stroke-width="13"
			cx="950"
			cy="600"
			r="45"></circle>
		<circle
			class="basic-shape littleCircle"
			fill="#0f1c70"
			cx="880"
			cy="40"
			r="27"></circle>
		<circle class="basic-shape bigCircle" fill="#ff4676" cx="940" cy="70" r="59"
		></circle>
		<circle
			class="basic-shape littleCircle"
			fill="#0f1c70"
			cx="100"
			cy="740"
			r="27"></circle>
		<circle class="basic-shape bigCircle" fill="#ff4676" cx="60" cy="700" r="59"
		></circle>

		<circle
			class="basic-shape hoop"
			fill="none"
			stroke="#ffe430"
			stroke-width="13"
			cx="50"
			cy="180"
			r="45"></circle>
		<image
			x="75"
			y="70"
			alt="Trapti rahangdale working on laptop"
			width="85%"
			filter="url(#duotone)"
			xlink:href={talkImgJPG}
		/>
		<use
			class="highlight-talk-pic"
			href="#speech"
			x="80"
			y="35"
			transform="scale(2) rotate(0)"
			transform-origin="100 100"
			style="
    transform-box: fill-box;
    rotate: 331deg;
    transform-origin: center;
"
		></use>
	</svg>
</div>
