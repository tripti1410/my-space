---
import PageLayout from "$src/layouts/PageLayout.astro"
---

<PageLayout title="Contact Form">
  <main id="main" class="contact-content">
    <h2>This page will host the contact form</h2>

    <form
      name="contact"
      action="/contact/success"
      method="POST"
      data-netlify="true"
      netlify-honeypot="check-this"
      data-netlify-recaptcha="true"
    >
      <p class="hidden">
        <label>
          Donâ€™t fill this out if you are human: <input
            type="checkbox"
            name="check-this"
          />
        </label>
      </p>
      <p>
        <label>Your Name: <input required type="text" name="name" /></label>
      </p>
      <p>
        <label>Your Email: <input required type="email" name="email" /></label>
      </p>
      <p>
        <label>Message: <textarea name="message"></textarea></label>
      </p>
      <div data-netlify-recaptcha="true"></div>
      <p>
        <button type="submit">Send</button>
      </p>
    </form>
  </main>
</PageLayout>
