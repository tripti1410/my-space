---
import PageLayout from "$src/layouts/PageLayout.astro"

import "$src/styles/projects.css"
import Projects from "$src/components/projects.jsx"
import * as github from "$src/js/github.js"
import magazineImageUrl from "$src/images/magzine-layout.jpg";

const user = `tripti1410`
const repos = await github.repos({ user }, { includeForks: false })
---

<PageLayout title="Projects">
  <main id="main" class="projects-page">
    <h1 class="title">Projects</h1>
    <Projects
      {repos}
      {magazineImageUrl}
    />
  </main>
</PageLayout>
